<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
            https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

  <!--  Регистрация JSP -->
  <servlet>
    <servlet-name>RegisterJsp</servlet-name>
    <jsp-file>/jsp/register.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterJsp</servlet-name>
    <url-pattern>/register-jsp</url-pattern>
  </servlet-mapping>

  <!-- Логин JSP -->
  <servlet>
    <servlet-name>LoginJsp</servlet-name>
    <jsp-file>/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginJsp</servlet-name>
    <url-pattern>/login-jsp</url-pattern>
  </servlet-mapping>

  <!-- Аутентификация JSP -->
  <servlet>
    <servlet-name>AuthJsp</servlet-name>
    <jsp-file>/jsp/auth.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthJsp</servlet-name>
    <url-pattern>/auth-jsp</url-pattern>
  </servlet-mapping>

  <!-- Забыли пароль JSP -->
  <servlet>
    <servlet-name>ForgotPassJSP</servlet-name>
    <jsp-file>/jsp/forgot_password.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ForgotPassJSP</servlet-name>
    <url-pattern>/forgot-pass-jsp</url-pattern>
  </servlet-mapping>

  <!-- Создание квиза JSP -->
  <servlet>
    <servlet-name>CreateQuizJSP</servlet-name>
    <jsp-file>/jsp/create_quiz.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateQuizJSP</servlet-name>
    <url-pattern>/create-quiz-jsp</url-pattern>
  </servlet-mapping>

  <!--  Создание Вопросов JSP -->
  <servlet>
    <servlet-name>CreateQuestionJSP</servlet-name>
    <jsp-file>/jsp/create_question.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateQuestionJSP</servlet-name>
    <url-pattern>/create-question-jsp</url-pattern>
  </servlet-mapping>

<!--  Выбрать Квиз JSP -->
  <servlet>
    <servlet-name>ChooseQuizJSP</servlet-name>
    <jsp-file>/jsp/choose_quiz.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChooseQuizJSP</servlet-name>
    <url-pattern>/choose-quiz-jsp</url-pattern>
  </servlet-mapping>

  <!--  Страницы хоста со списком игроков JSP  -->
  <servlet>
    <servlet-name>PageWithCodeJSP</servlet-name>
    <jsp-file>/jsp/page_with_code.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>PageWithCodeJSP</servlet-name>
    <url-pattern>/page-with-code-jsp</url-pattern>
  </servlet-mapping>

  <!--  Главный экран JSP  -->
  <servlet>
    <servlet-name>MainJSP</servlet-name>
    <jsp-file>/jsp/main.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainJSP</servlet-name>
    <url-pattern>/main-jsp</url-pattern>
  </servlet-mapping>

  <!--  Начало квиза  JSP -->
  <servlet>
    <servlet-name>QuizJSP</servlet-name>
    <jsp-file>/jsp/quiz.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuizJSP</servlet-name>
    <url-pattern>/quiz-jsp</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>PersonalAccountJSP</servlet-name>
    <jsp-file>/jsp/personal_account.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>PersonalAccountJSP</servlet-name>
    <url-pattern>/personal-account-jsp</url-pattern>
  </servlet-mapping>

  <!-- Страница Получения Прав JSP -->
  <servlet>
    <servlet-name>UpgradePermissionJSP</servlet-name>
    <jsp-file>/jsp/upgrade_permission.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpgradePermissionJSP</servlet-name>
    <url-pattern>/upgrade-permission-jsp</url-pattern>
  </servlet-mapping>

  <!-- Страница Завершение Квиза JSP -->
  <servlet>
    <servlet-name>EndOfQuizJSP</servlet-name>
    <jsp-file>/jsp/end_of_quiz.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>EndOfQuizJSP</servlet-name>
    <url-pattern>/end-of-quiz-jsp</url-pattern>
  </servlet-mapping>

  <!-- Страница Результатов JSP -->
  <servlet>
    <servlet-name>ResultOfQuizJSP</servlet-name>
    <jsp-file>/jsp/result_of_quiz.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResultOfQuizJSP</servlet-name>
    <url-pattern>/result-of-quiz-jsp</url-pattern>
  </servlet-mapping>
  
  
  <!-- Успех! JSP-->
  <servlet>
    <servlet-name>CongratJSP</servlet-name>
    <jsp-file>/jsp/congrat.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>CongratJSP</servlet-name>
    <url-pattern>/congrat-jsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PasswordUpdatedJSP</servlet-name>
    <jsp-file>/jsp/password_updated.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>PasswordUpdatedJSP</servlet-name>
    <url-pattern>/password-updated-jsp</url-pattern>
  </servlet-mapping>

  <!-- Страница ошибки JSP -->
  <servlet>
    <servlet-name>ExceptionJSP</servlet-name>
    <jsp-file>/jsp/exception.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExceptionJSP</servlet-name>
    <url-pattern>/exception-jsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>WaitingOfQuizJSP</servlet-name>
    <jsp-file>/jsp/waiting_of_quiz.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>WaitingOfQuizJSP</servlet-name>
    <url-pattern>/waiting-of-quiz-jsp</url-pattern>
  </servlet-mapping>

  <error-page>
    <location>/handle</location>
  </error-page>

</web-app>

  
  

  

